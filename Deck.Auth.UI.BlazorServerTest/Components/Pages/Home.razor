@page "/"
@page "/home"

@attribute [Authorize]

@inject MyAuthStateProvider AuthStateProvider

<PageTitle>Home</PageTitle>

<AuthorizeView>
    <Authorized>
        <p>Hello, @context.User?.Identity?.Name!</p>
    </Authorized>
    <NotAuthorized>
        <p>Hello, Guest!</p>
    </NotAuthorized>
</AuthorizeView>